@using SIMS.BL
@using (@Html.BeginForm("Index", "Item", FormMethod.Get))
{

    int userId = Users.RetrieveStaffIdByEmail(ViewContext.HttpContext.User.Identity.Name);
    Users user = Users.RetrieveById(userId);
    AccessMatrix accessMatrix = AccessMatrix.RetrieveByModuleName("Item");
    if (accessMatrix != null)
    {
AccessMatrixDetails accessMatrixDetails = AccessMatrixDetails.RetrieveAccess(accessMatrix.Id, user.Usertype);

        if (accessMatrixDetails != null)
        {

            <div class="card-body admin-outer-form">
                <div class="card-body admin-form">
                    <h3>Item List</h3>
                    <hr />
                    <div class="row">
                        <div class="col-12">&nbsp;</div>
                    </div>

                    <div class="row">

                        <div class="col-12">
                            <div class="card">


                                <div class="card-body">

                                    <div class="row">

                                        @if (accessMatrixDetails.IsSearch == true)
                                        {


                                            <div class="col-8 col-md-8 col-lg-4">
                                                @Html.TextBox("search", null, new { @class = "search form-control", @placeholder = "Search", name = "search" })
                                            </div>

                                            <div class="col-4 col-md-4 col-lg-2">
                                                <input type="submit" value="search" class="btn btn-block btn-outline-dark" />
                                            </div>

                                            <div class="col-6 col-md-5 col-lg-3 btnReadAll">
                                                <button id="btnReadAll" class=" btn btn-block btn-dark">Show All</button>
                                            </div>
                                        }
                                        @if (accessMatrixDetails.IsCreate == true)
                                        {


                                            <div class="col-6 col-md-7 col-lg-3 btnReadAll">
                                                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-dark btn-block" })
                                            </div>
                                        }
                                    </div>


                                    @if (accessMatrixDetails.IsExport == true)
                                    {


                                        <div class="row">
                                            <div class="col-lg-10 col-6">
                                            </div>

                                            <div class="col-lg-2 col-6">
                                                @Html.ActionLink("Export", "Excel", "Item", new
                                           {
                                               search = Request.QueryString["search"],
                                               startdate = Request.QueryString["startdate"],
                                               enddate = Request.QueryString["enddate"]
                                           }, new { @class = "btn btn-dark btn-block ", style = "margin-top:15px;margin-bottom:5px;" })
                                            </div>
                                        </div>
                                    }



                                    <!-- table-striped -->
                                    <table class="table table-responsive-xl  table-sm w3-table w3-striped w3-border" id="dataTable">
                                        <thead>
                                            <tr>

                                                <th class="d-none">
                                                    @Html.DisplayNameFor(model => model.First().Id)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().Name)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().UnitOfMeasurement)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().Category)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().SubCategory)
                                                </th>

                                                <th data-field="Edit" data-tableexport-display="none"></th>
                                                <th data-field="Details" data-tableexport-display="none"></th>
                                                <th data-field="DeActivate" data-tableexport-display="none"></th>
                                            </tr>
                                        </thead>
                                        @if (Model.Count() == 0)
                                        {
                                            <tr>
                                                <td colspan="8">No rows matching search criteria </td>
                                            </tr>
                                        }
                                        else
                                        {

                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td class="d-none">
                                                        @Html.DisplayFor(modelItem => item.Id)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Name)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.UnitOfMeasurement)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Category)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SubCategory)
                                                    </td>


                                                    <td data-field="Edit" data-tableexport-display="none">

                                                        @if (accessMatrixDetails.IsEdit == true)
                                                        {

                                                            @Html.ActionLink("Edit", "Edit", "Item", new { id = item.Id }, new { @class = "btn btn-sm btn-dark btn-block" })

                                                        }
                                                    </td>
                                                    <td data-field="Details" data-tableexport-display="none">

                                                        @if (accessMatrixDetails.IsDetails == true)
                                                        {

                                                            @Html.ActionLink("Details", "Details", "Item", new { id = item.Id }, new { @class = "btn btn-sm btn-dark btn-block" })
                                                        }
                                                    </td>
                                                    <td data-field="Delete" data-tableexport-display="none">

                                                        @if (accessMatrixDetails.Isdeleted == true)
                                                        {

                                                            @Html.ActionLink("Delete", "Delete", "Item", new { id = item.Id }, new { @class = "btn btn-sm btn-dark btn-block" })

                                                        }
                                                    </td>

                                                </tr>
                                            }
                                        }

                                    </table>



                                </div>
                                <div class="card-footer text-muted">
                                    @Html.PagedListPager(Model, pageIndex => Url.Action("Index", new
                               {
                                   pageIndex,
                                   search = Request.QueryString["search"],
                                   startdate = Request.QueryString["startdate"],
                                   enddate = Request.QueryString["enddate"]
                               }),
new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded })
                                    @*@Html.Partial("_PagingFooter")*@
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>


        }
    }
}
