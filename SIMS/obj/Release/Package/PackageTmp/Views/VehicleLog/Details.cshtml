@model SIMS.ViewModels.VehicleLogModel.VehicleLogModel
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayoutpage.cshtml";
}

<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>
@using SIMS.BL
@{
    int userId = Users.RetrieveStaffIdByEmail(ViewContext.HttpContext.User.Identity.Name);
    Users user = Users.RetrieveById(userId);
    AccessMatrix accessMatrix = AccessMatrix.RetrieveByModuleName("VehicleLog");
    if (accessMatrix != null)
    {
        AccessMatrixDetails accessMatrixDetails = AccessMatrixDetails.RetrieveAccess(accessMatrix.Id, user.Usertype);

        if (accessMatrixDetails != null)
        {
            <div class="card-body admin-outer-form">
                <div class="card-body admin-form">
                    <h3>Vehicle Log Details</h3>
                    <hr />
                    <div class="row">
                        <div class="col-12">&nbsp;</div>
                    </div>


                    <div class="row">
                        <div class="col-12 col-md-12">
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.Id)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.Id)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.UserName)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.UserName)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.TimeStamp)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.ValueFor(model => model.TimeStamp, "{0:dd-MM-yyyy}")
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.Purpose)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.Purpose)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.StartingPoint)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.StartingPoint)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.Destination)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.Destination)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.StartReading)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.StartReading)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.EndReading)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.EndReading)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.FuelFilled)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.FuelFilled)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.FuelQuantity)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.FuelQuantity)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.Amount)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.Amount)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.Voucher)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.Voucher)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.Remarks)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.Remarks)
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-12">&nbsp;</div>
                            </div>
                            @if (accessMatrixDetails.IsEdit == true)
                            {
                                <div class="row">
                                    <div class="col-sm-3 col-6">
                                        @Html.ActionLink("Edit", "Edit", "VehicleLog", new { id = Model.Id }, new { @class = "btn btn-sm btn-dark btn-block", style = "margin-bottom:10px" })
                                    </div>
                                    <div class="col-sm-3 col-6">
                                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                                    </div>
                                    <div class="col-sm-3"></div>
                                </div>
                            }
                            else
                            {
                                <div class="row">
                                    <div class="col-sm-3 col-6">
                                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                                    </div>
                                    <div class="col-sm-3 col-6"></div>
                                </div>

                            }
                            <div class="row">
                                <div class="col-12">&nbsp;</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}