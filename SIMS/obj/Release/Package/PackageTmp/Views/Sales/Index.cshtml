@using PagedList;
@using PagedList.Mvc
@model IPagedList<SIMS.ViewModels.SalesModel.SalesModel>
@{
    ViewBag.Title = "Sales";
    Layout = "~/Views/Shared/_AdminLayoutpage.cshtml";
}


<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>
@using SIMS.BL

@using (@Html.BeginForm("Index", "Sales", FormMethod.Get))
{
    int userId = Users.RetrieveStaffIdByEmail(ViewContext.HttpContext.User.Identity.Name);
    Users user = Users.RetrieveById(userId);
    AccessMatrix accessMatrix = AccessMatrix.RetrieveByModuleName("Sales");
    if (accessMatrix != null)
    {
AccessMatrixDetails accessMatrixDetails = AccessMatrixDetails.RetrieveAccess(accessMatrix.Id, user.Usertype);

        if (accessMatrixDetails != null)
        {

            <div class="card-body admin-outer-form">
                <div class="card-body admin-form">
                    <h3>Sales List</h3>
                    <hr />

                    <div class="row">
                        <div class="col-12">&nbsp;</div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">

                                    <div class="row">
                                        @if (accessMatrixDetails.IsSearch == true)
                                        {
                                            <div class="col-12 col-md-5 col-lg-3" style="float: right">
                                                <div style="border:0.5px solid rgba(128, 128, 128, 0.59);border-radius:5px;padding:2px;">
                                                    <div class="row">
                                                        <div class="col-12">
                                                            @Html.TextBox("search", null, new { @class = "search", @placeholder = "Name", name = "search", style = "width:auto;border:none;outline:none;display:inline-flex" })
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-12 col-md-5 col-lg-4 d-flex btnReadAll">
                                                <div class="mr-2 text-center" style="border:0.5px solid rgba(128, 128, 128, 0.59);border-radius:5px;padding:2px;display:inline-flex">
                                                    @Html.TextBox("startdate", null, new { @class = "search", @placeholder = "dd-mm-yyyy", id = "sdatepicker", name = "startdate", style = "width:105px;border:none;outline:none;" })
                                                    <span>&nbsp;-&nbsp;&nbsp;</span>
                                                    @Html.TextBox("enddate", null, new { @class = "search", @placeholder = "dd-mm-yyyy", id = "edatepicker", name = "enddate", style = "width:105px;border:none;outline:none;" })
                                                </div>
                                                <button type="submit" class="btn btn-block btn-outline-dark">
                                                    Search
                                                </button>
                                            </div>

                                            <div class="col-6 col-md-6 col-lg-2 btnReadAll">
                                                <button id="btnReadAll" class=" btn btn-block btn-dark">Show All</button>
                                            </div>
                                        }
                                        @if (accessMatrixDetails.IsCreate == true)
                                        {
                                            <div class="col-6 col-md-6 col-lg-3 btnReadAll">

                                                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-dark btn-block" })

                                            </div>
                                        }
                                    </div>

                                    @if (accessMatrixDetails.IsExport == true)
                                    {
                                        <div class="row" style="margin-top:10px;">
                                            <div class="col-lg-10 col-6">
                                            </div>

                                            <div class="col-lg-2 col-6">
                                                @Html.ActionLink("Export", "Excel", "Sales", new
                                           {
                                               search = Request.QueryString["search"],
                                               startdate = Request.QueryString["startdate"],
                                               enddate = Request.QueryString["enddate"]
                                           }, new { @class = "btn btn-dark btn-block ", style = "margin-top:15px;margin-bottom:5px;" })

                                            </div>
                                        </div>

                                    }
                                    else
                                    {
                                        <div class="row">
                                            <div class="col-12">&nbsp;</div>
                                        </div>
                                    }

                                   
                                    <!-- table-striped -->
                                    <table class="table table-responsive-lg  table-sm w3-table w3-striped w3-border" id="dataTable">
                                        <thead>
                                            <tr>
                                                <th class="d-none">
                                                    @Html.DisplayNameFor(model => model.First().Id)
                                                </th>

                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().Date)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().MarketingExecutive)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().ProductCategory)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().SalesAmount)
                                                </th>

                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().SalesReturnAmount)
                                                </th>

                                                <th></th>
                                                <th></th>
                                                <th></th>
                                            </tr>
                                        </thead>

                                        @if (Model.Count() == 0)
                                        {
                                            <tr>
                                                <td colspan="8">No rows matching search criteria </td>
                                            </tr>
                                        }
                                        else
                                        {


                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td class="d-none">
                                                        @Html.DisplayFor(modelItem => item.Id)
                                                    </td>
                                                    <td>
                                                        <span hidden> @Html.ValueFor(modelItem => item.Date, "{0:MM-dd-yyyy}")</span>
                                                        @Html.ValueFor(modelItem => item.Date, "{0:dd-MM-yyyy}")
                                                    </td>
                                                    @if (item.StaffID == 0)
                                                    {
                                                        <td>
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.MarketingExecutive)
                                                        </td>
                                                    }
                                                    @if (item.ProductCategory == "Select")
                                                    {
                                                        <td>
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td>
                                                            @Html.DisplayFor(modelItem => item.ProductCategory)
                                                        </td>
                                                    }
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SalesAmount)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.SalesReturnAmount)
                                                    </td>

                                                    <td>
                                                        @if (accessMatrixDetails.IsEdit == true)
                                                        {
                                                            @Html.ActionLink("Edit", "Edit", "Sales", new { id = item.Id }, new { @class = "btn btn-sm btn-dark btn-block" })

                                                        }
                                                    </td>
                                                    <td>

                                                        @if (accessMatrixDetails.IsDetails == true)
                                                        {
                                                            @Html.ActionLink("Details", "Details", "Sales", new { id = item.Id }, new { @class = "btn btn-sm btn-dark btn-block" })
                                                        }
                                                    </td>
                                                    <td>

                                                        @if (accessMatrixDetails.Isdeleted == true)
                                                        {

                                                            @Html.ActionLink("Delete", "Delete", "Sales", new { id = item.Id }, new { @class = "btn btn-sm btn-dark btn-block" })
                                                        }
                                                    </td>

                                                </tr>
                                            }
                                        }

                                    </table>


                                </div>
                                <div class="card-footer text-muted">
                                    @Html.PagedListPager(Model, pageIndex => Url.Action("Index", new
                               {
                                   pageIndex,
                                   search = Request.QueryString["search"],
                                   startdate = Request.QueryString["startdate"],
                                   enddate = Request.QueryString["enddate"]
                               }),
new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded })
                                    @*@Html.Partial("_PagingFooter")*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}
@section scripts{
    <script>
        $('#sdatepicker').datepicker();
        $('#edatepicker').datepicker();
        $(document).ready(function () {
            $('#sdatepicker').attr("readonly", "readonly");
            $('#edatepicker').attr("readonly", "readonly");
        })
    </script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>


}