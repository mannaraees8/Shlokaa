@model SIMS.ViewModels.MaterialMovementModel.MaterialMovementModel
@{
    ViewBag.Title = "Material Movement";
    Layout = "~/Views/Shared/_AdminLayoutpage.cshtml";
}
<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>
@using SIMS.BL

@{
    int userId = Users.RetrieveStaffIdByEmail(ViewContext.HttpContext.User.Identity.Name);
    Users user = Users.RetrieveById(userId);
    AccessMatrix accessMatrix = AccessMatrix.RetrieveByModuleName("MaterialMovement");
    if (accessMatrix != null)
    {
        AccessMatrixDetails accessMatrixDetails = AccessMatrixDetails.RetrieveAccess(accessMatrix.Id, user.Usertype);

        if (accessMatrixDetails != null)
        {

            <div class="card-body admin-outer-form">
                <div class="card-body admin-form">
                    <h3> Material Movement Details</h3>
                    <hr />
                    <div class="row">
                        <div class="col-12">&nbsp;</div>
                    </div>

                    <div class="row">
                        <div class="col-12 col-md-12">
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.Id)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.Id)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.Timestamp)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.ValueFor(model => model.Timestamp, "{0:dd-MM-yyyy}")
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.UserName)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.UserName)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.CustomerName)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.CustomerName)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.ItemName)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.ItemName)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.Invoiceno)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.Invoiceno)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.Invoicedate)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.ValueFor(model => model.Invoicedate, "{0:dd-MM-yyyy}")
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.Quantity)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.Quantity)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.UnitName)

                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.UnitName)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.Invoiceamount)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.Invoiceamount)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.Remarks)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.Remarks)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    @Html.DisplayNameFor(model => model.Movementtype)
                                </div>
                                <div class="col-8 col-lg-9">
                                    : @Html.DisplayFor(model => model.Movementtype)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-lg-3">
                                    <label>Item Sizes</label>
                                </div>
                                <div class="col-8 col-lg-6">
                                    &nbsp;   @{
                                        Html.RenderAction("RenderItemISize", "MaterialMovement");
                                    }
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">&nbsp;</div>
                            </div>
                            @if (accessMatrixDetails.IsEdit == true)
                            {
                                if (userId != Model.Staffid)
                                {
                                    if (user.Usertype == "Admin" || user.Usertype == "Group Head")
                                    {
                                        <div class="row">
                                            <div class="col-sm-3 col-6">
                                                @Html.ActionLink("Edit", "Edit", "MaterialMovement", new { id = Model.Id }, new { @class = "btn btn-sm btn-dark btn-block" })
                                            </div>
                                            <div class="col-sm-3 col-6">
                                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                                            </div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="row">
                                            <div class="col-sm-3 col-6">
                                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                                            </div>
                                        </div>
                                    }
                                }
                                else
                                {
                                    <div class="row">
                                        <div class="col-sm-3 col-6">
                                            @Html.ActionLink("Edit", "Edit", "MaterialMovement", new { id = Model.Id }, new { @class = "btn btn-sm btn-dark btn-block" })
                                        </div>
                                        <div class="col-sm-3 col-6">
                                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="row">

                                    <div class="col-sm-3 col-6">
                                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                                    </div>
                                </div>
                            }
                            <div class="row">
                                <div class="col-12">&nbsp;</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        }
    }
}