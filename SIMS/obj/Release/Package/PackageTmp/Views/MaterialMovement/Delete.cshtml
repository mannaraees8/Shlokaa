                </div>
                <div class="row">
                    <div class="col-4 col-lg-3">
                        @Html.DisplayNameFor(model => model.UserName)
                    </div>
                    <div class="col-8 col-lg-9">
                        : @Html.DisplayFor(model => model.UserName)
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 col-lg-3">
