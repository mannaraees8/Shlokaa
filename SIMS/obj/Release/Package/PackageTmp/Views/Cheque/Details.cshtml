@model SIMS.ViewModels.ChequeModel

@{
    ViewBag.Title = "Cheque";
    Layout = "~/Views/Shared/_AdminLayoutpage.cshtml";
}

<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>
@using SIMS.BL
@{

    int userId = Users.RetrieveStaffIdByEmail(ViewContext.HttpContext.User.Identity.Name);
    AccessMatrix accessMatrix = AccessMatrix.RetrieveByModuleName("Cheque");
    if (accessMatrix != null)
    {
        AccessMatrixDetails accessMatrixDetails = AccessMatrixDetails.RetrieveAccessByModuleId(userId, accessMatrix.Id);
        if (accessMatrixDetails != null)
        {
            <div class="card-body admin-outer-form">
                <div class="card-body admin-form">
                    <h3>Customer Cheque Details</h3>
                    <hr />
                    <div class="row">
                        <div class="col-12">&nbsp;</div>
                    </div>



                    <div class="row">
                        <div class="col-lg-12 col-md-10 col-sm-12">
                            <div class="row">
                                <div class="col-sm-4 col-lg-2">
                                    @Html.DisplayNameFor(model => model.Id)
                                </div>
                                <div class="col-sm-6 col-lg-10">
                                    : @Html.DisplayFor(model => model.Id)
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-4 col-lg-2">
                                    @Html.DisplayNameFor(model => model.ChequeNo)
                                </div>
                                <div class="col-sm-6 col-lg-10">
                                    : @Html.DisplayFor(model => model.ChequeNo)
                                </div>
                            </div>


                            <div class="row">
                                <div class="col-sm-4 col-lg-2">
                                    @Html.DisplayNameFor(model => model.ChequeDate)
                                </div>
                                <div class="col-sm-6 col-lg-10">

                                    : @Html.ValueFor(model => model.ChequeDate, "{0:dd-MM-yyyy}")

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-sm-4 col-lg-2">
                                    @Html.DisplayNameFor(model => model.PartyName)
                                </div>
                                <div class="col-sm-6 col-lg-10">
                                    : @Html.DisplayFor(model => model.PartyName)

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4 col-lg-2">
                                    @Html.DisplayNameFor(model => model.Amount)
                                </div>         
                                <div class="col-sm-6 col-lg-10">
                                    : @Html.DisplayFor(model => model.Amount)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4 col-lg-2">
                                    @Html.DisplayNameFor(model => model.BankName)
                                </div>
                                <div class="col-sm-6 col-lg-10">
                                    : @Html.DisplayFor(model => model.BankName)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4 col-lg-2">
                                    @Html.DisplayNameFor(model => model.ClearingDate)
                                </div>
                                <div class="col-sm-6 col-lg-10">
                                    : 
                                    @if (Model.ClearingDate == DateTime.MinValue)
                                    {

                                    }
                                    else
                                    {
                                        @Html.ValueFor(model => model.ClearingDate, "{0:dd-MM-yyyy}")
                                    }
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4 col-lg-2">
                                    @Html.DisplayNameFor(model => model.Status)
                                </div>
                                <div class="col-sm-6 col-lg-10">
                                    : @Html.DisplayFor(model => model.Status)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-sm-4 col-lg-2">
                                    @Html.DisplayNameFor(model => model.Remark)
                                </div>
                                <div class="col-sm-6 col-lg-10">
                                    : @Html.DisplayFor(model => model.Remark)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">&nbsp;</div>
                            </div>
                            @if (accessMatrixDetails.IsEdit == true)
                            {
                                <div class="row">
                                    <div class="col-sm-3 col-6">
                                        @Html.ActionLink("Edit", "Edit", "Cheque", new { id = Model.Id }, new { @class = "btn btn-sm btn-dark btn-block" })
                                    </div>
                                    <div class="col-sm-3 col-6">
                                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="row">
                                    <div class="col-sm-3 col-6">
                                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                                    </div>
                                </div>
                            }
                        </div>

                        <div class="row">
                            <div class="col-12">&nbsp;</div>
                        </div>
                    </div>
                </div>
            </div>

        }
    }
}