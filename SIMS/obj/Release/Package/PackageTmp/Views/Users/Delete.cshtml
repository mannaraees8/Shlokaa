                    Byte[] imgByte = (byte[])Model.Photo;
                    string base64String = Convert.ToBase64String(imgByte, 0, imgByte.Length);
                    base64String = "data:image/png;base64," + base64String;

                    <img src="@base64String " class="rounded-circle shadow" width="250" height="250" alt="No Image">


                }
                else
                {
                    <i class="fa fa-user-circle img-fluid" style="font-size:100px;color:white"></i>
                }

