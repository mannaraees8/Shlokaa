
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body {
    }

    .card {
        position: relative;
        margin: auto;
        width: 30%;
        background-color: white;
        margin-top: 2%;
        padding: 20px;
        border-radius: 10px;
        padding-top: 50px;
    }

    .input {
        padding-left: 8px;
        height: 39px;
        width: 230px;
        border-radius: 5px;
        border: none;
        background-color: aliceblue;
        margin-right: 5px;
        font-size: 16px;
    }

    .group {
        width: 100%;
        margin-top: 20px;
    }

    h1 {
        font-family: sans-serif;
    }

    p {
        color: gray;
        font-family: sans-serif;
    }

    .buttons {
        margin-top: 20px;
    }

    .btn {
        padding: 10px;
        width: 39%;
        font-family: sans-serif;
        color: white;
        font-weight: 600;
        border: none;
        background-color: #3598dc;
        font-size: 16px;
        margin-left: 8px;
        cursor: pointer;
    }
</style>
<div style="text-align:center; background-color: #3598dc;padding-top:50px;margin-top:20px" ;>
    <form>
        <div class="card">
            <h1>Login</h1>

            <hr>
            <div class="box" style="margin-top: 30px;">
                <div class="group">
                    <input class="input" type="text" placeholder="UserName">
                </div>
                <div class="group">
                    <input class="input" type="text" placeholder="Password">
                </div>

            </div>
            <br />
            <br />
            <div class="buttons">
                <input type="button" class="btn" value="Login">
            </div>
            <br />
        </div>
        <br />
        <br />
    </form>
</div>


