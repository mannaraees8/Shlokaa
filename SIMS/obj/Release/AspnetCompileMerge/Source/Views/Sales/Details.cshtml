@model SIMS.ViewModels.SalesModel.SalesModel
@{
    ViewBag.Title = "Sales";
    Layout = "~/Views/Shared/_AdminLayoutpage.cshtml";
}
<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>
@using SIMS.BL

@{ int userId = Users.RetrieveStaffIdByEmail(ViewContext.HttpContext.User.Identity.Name);
    AccessMatrix accessMatrix = AccessMatrix.RetrieveByModuleName("Sales");
    if (accessMatrix != null)
    {
        AccessMatrixDetails accessMatrixDetails = AccessMatrixDetails.RetrieveAccessByModuleId(userId, accessMatrix.Id);

        if (accessMatrixDetails != null)
        {

            <div class="card-body admin-outer-form">
                <div class="card-body admin-form">
                    <h3>Sales Details</h3>
                    <hr />

                    <div class="row">
                        <div class="col-12 col-md-12 col-lg-12">

                            <div class="row">
                                <div class="col-lg-2 col-4">
                                    @Html.DisplayNameFor(model => model.Date)
                                </div>
                                <div class="col-lg-10 col-8">
                                    :@Html.ValueFor(model => model.Date, "{0:dd-MM-yyyy}")

                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-2 col-4">
                                    @Html.DisplayNameFor(model => model.MarketingExecutive)
                                </div>
                                <div class="col-lg-10 col-8">
                                    : @if (Model.MarketingExecutive == "Select")
                                    {

                                    }
                                    else
                                    {
                                        @Html.DisplayFor(model => model.MarketingExecutive)
                                    }
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-2 col-4">
                                    @Html.DisplayNameFor(model => model.ProductCategory)
                                </div>
                                <div class="col-lg-10 col-8">
                                    : @if (Model.MarketingExecutive == "Select")
                                    {

                                    }
                                    else
                                    {
                                        @Html.DisplayFor(model => model.ProductCategory)
                                    }
                                </div>
                            </div>




                            <div class="row">
                                <div class="col-lg-2 col-4">
                                    @Html.DisplayNameFor(model => model.SalesAmount)
                                </div>
                                <div class="col-lg-10 col-8">
                                    : @Html.DisplayFor(model => model.SalesAmount)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-2 col-4">
                                    @Html.DisplayNameFor(model => model.SalesReturnAmount)
                                </div>
                                <div class="col-lg-10 col-8">
                                    : @Html.DisplayFor(model => model.SalesReturnAmount)
                                </div>
                            </div>



                            <div class="row ">
                                <div class="col-12">&nbsp;</div>
                            </div>
                            @if (accessMatrixDetails.IsEdit==true)
                            {<div class="row">
                                    <div class="col-sm-3 col-6">
                                        @Html.ActionLink("Edit", "Edit", "Sales", new { id = Model.Id }, new { @class = "btn btn-sm btn-dark btn-block", style = "margin-bottom:10px;" })
                                    </div>
                                    <div class="col-sm-3 col-6">
                                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                                    </div>
                                </div>

                            }
                            else
                            {
                                <div class="row">
                                    <div class="col-sm-3 col-6">
                                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                                    </div>
                                </div>
                            }
                            <div class="row">
                                <div class="col-12">&nbsp;</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



            }
        }
    }