@model SIMS.Models.SubCategoryModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}
<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>
@using SIMS.BL
@{
    int userId = Users.RetrieveStaffIdByEmail(ViewContext.HttpContext.User.Identity.Name);
    AccessMatrix accessMatrix = AccessMatrix.RetrieveByModuleName("SubCategory");
    if (accessMatrix != null)
    {
        AccessMatrixDetails accessMatrixDetails = AccessMatrixDetails.RetrieveAccessByModuleId(userId, accessMatrix.Id);

        if (accessMatrixDetails != null)
        {

            <div class="card-body admin-outer-form">
                <div class="card-body admin-form">
                    <h3>Sub Category Details</h3>
                    <hr />

                    <div class="row">
                        <div class="col-12">&nbsp;</div>
                    </div>

                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-12 col-md-10">


                            <div class="row d-none">
                                <div class="col-sm-1"></div>
                                <div class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Id)
                                </div>
                                <div class="col-sm-6">
                                    @Html.DisplayFor(model => model.Id)
                                </div>
                            </div>
                            <div class="row d-none">
                                <div class="col-12">&nbsp;</div>
                            </div>

                            <div class="row">
                                <div class="col-sm-1"></div>
                                <div class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Name)
                                </div>
                                <div class="col-sm-6">
                                    @Html.DisplayFor(model => model.Name)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">&nbsp;</div>
                            </div>
                            <div class="row">
                                <div class="col-4 col-sm-3">
                                    @Html.LabelFor(model => model.Category)
                                </div>
                                <div class="col-8 col-sm-6">

                                    @Html.DisplayFor(model => model.Category, "", new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Category)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">&nbsp;</div>
                            </div>
                            <div class="row">
                                <div class="col-sm-1"></div>
                                <div class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Discription)
                                </div>
                                <div class="col-sm-6">
                                    @Html.DisplayFor(model => model.Discription)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">&nbsp;</div>
                            </div>

                            <div class="row">
                                <div class="col-sm-1"></div>
                                <div class="col-sm-4">
                                    @Html.DisplayNameFor(model => model.Name)
                                </div>
                                <div class="col-sm-6">
                                    @Html.DisplayFor(model => model.Name)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">&nbsp;</div>
                            </div>


                        </div>
                        <div class="card-footer text-muted">
                            @if (accessMatrixDetails.IsEdit == true)
                            {
                                <div class="row">
                                    <div class="col-sm-1"></div>
                                    <div class="col-sm-4">
                                        @Html.ActionLink("Edit", "Edit", "Category", new { id = Model.Id }, new { @class = "btn btn-sm btn-dark btn-block", style = "margin-bottom:10px;" })
                                    </div>
                                    <div class="col-sm-6">
                                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                                    </div>
                                </div>}
                            else
                            {
                                <div class="row">
                                    <div class="col-sm-1"></div>

                                    <div class="col-sm-6">
                                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                                    </div>
                                </div>
                            }
                            <div class="row">
                                <div class="col-12">&nbsp;</div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>



        }
    }
}