@model SIMS.Models.UnitOfMeasurementModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";

    if (ViewBag.count == true)
    {
        Session["count"] = (bool)ViewBag.count;
        @section Scripts{
            <script>

                $(function () {
                    $('#myModal').modal();

                });

            </script>

        }
    }
}
<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>
<div class="modal fade" tabindex="-1" role="dialog" id="myModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h4 class="modal-title" style="color:white">
                    Delete Unit Of Measurement
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                This unit of measurement is associated with sizes in order to delete unit of measurement, first you have to delete the sizes.

            </div>
            <div class="text-right">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<div class="card-body admin-outer-form">
    <div class="card-body admin-form">
        <h3> Delete Unit Of Measurement</h3>
        <hr />
        <div class="row">
            <div class="col-12">&nbsp;</div>
        </div>


        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-12 col-md-10">


                <div class="row ">
                    <div class="col-sm-1"></div>
                    <div class="col-4 col-sm-4">
                        @Html.DisplayNameFor(model => model.Id)
                    </div>
                    <div class="col-8 col-sm-6">
                        @Html.DisplayFor(model => model.Id)
                    </div>
                </div>
                <div class="row ">
                    <div class="col-12">&nbsp;</div>
                </div>

                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-8 col-sm-4">
                        @Html.DisplayNameFor(model => model.UnitOfMeasurementName)
                    </div>
                    <div class="col-4 col-sm-6">
                        @Html.DisplayFor(model => model.UnitOfMeasurementName)
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">&nbsp;</div>
                </div>



                @using (Html.BeginForm())
                {
                    <div class="row">
                        <div class="col-sm-1"></div>
                        <div class="col-6 col-sm-4">
                            <input type="submit" value="Delete" class="btn btn-sm btn-dark btn-block" style="margin-bottom:10px" />
                        </div>
                        <div class="col-6 col-sm-4">
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                        </div>
                    </div>
                }
                <div class="row">
                    <div class="col-12">&nbsp;</div>
                </div>
            </div>

        </div>
    </div>
</div>


