@section  Scripts{
    @*<script src="//mozilla.github.io/pdf.js/build/pdf.js"></script>*@

    <script>

        document.onreadystatechange = function () {
            if (document.readyState !== "complete") {
                document.querySelector(
                    "#loader").style.visibility = "visible";
            } else {
                document.querySelector(
                    "#loader").style.display = "none";
                document.querySelector(
                    "#GalleryBody").style.display = "block";
            }
        };
        $(document).ready(function () {
            let activeTab = sessionStorage.getItem('activeTab');
            if (JSON.parse(activeTab) !== null) {
                if (JSON.parse(activeTab) == "Images") {
                    $('.nav-link[data-value="Images"]').click();
                }
                else if (JSON.parse(activeTab) == "Brochure") {
                    $('.nav-link[data-value="Brochure"]').click();
                }
                else {
                    $('.nav-link[data-value="Trivia"]').click();
                }
            }
            else {
                $('.nav-link[data-value="Images"]').click();
            }

        })
        $('.nav-link').click(function () {
            let activeTab = $(this).attr('data-value')
            sessionStorage.setItem('activeTab', JSON.stringify(activeTab))
        })
    </script>

}

