@using PagedList;
@using PagedList.Mvc
@model IPagedList<SIMS.ViewModels.PaymentModel>

@{
    ViewBag.Title = "Payment";
    Layout = "~/Views/Shared/_AdminLayoutpage.cshtml";
}

<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>

@using SIMS.BL

<div class="row">
    <div class="col-12">&nbsp;</div>
</div>
@using (@Html.BeginForm("Index", "Payment", FormMethod.Get))
{
    int userId = Users.RetrieveStaffIdByEmail(ViewContext.HttpContext.User.Identity.Name);
    Users user = Users.RetrieveById(userId);
    AccessMatrix accessMatrix = AccessMatrix.RetrieveByModuleName("Payment");
    if (accessMatrix != null)
    {
        AccessMatrixDetails accessMatrixDetails = AccessMatrixDetails.RetrieveAccess(accessMatrix.Id, user.Usertype);

        if (accessMatrixDetails != null)
        {
            <div class="card-body admin-outer-form">
                <div class="card-body admin-form">
                    <h3>Payment List</h3>
                    <hr />
                    <div class="row">
                        <div class="col-12">&nbsp;</div>
                    </div>

                    <div class="row">
                        <div class="col-12 col-sm-12">
                            <div class="card">

                                <div class="card-body">

                                    <div class="row">
                                        @if (accessMatrixDetails.IsSearch == true)
                                        {
                                            <div class="col-12 col-md-5 col-lg-3" style="float: right">
                                                <div style="border:0.5px solid rgba(128, 128, 128, 0.59);border-radius:5px;padding:2px;">
                                                    <div class="row">
                                                        <div class="col-12">
                                                            @Html.TextBox("search", null, new { @class = "search", @placeholder = "Name", name = "search", style = "width:auto;border:none;outline:none;display:inline-flex" })
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-12 col-md-5 col-lg-4 d-flex btnReadAll">
                                                <div class="mr-2 text-center" style="border:0.5px solid rgba(128, 128, 128, 0.59);border-radius:5px;padding:2px;display:inline-flex">
                                                    @Html.TextBox("startdate", null, new { @class = "search", @placeholder = "dd-mm-yyyy", id = "sdatepicker", name = "startdate", style = "width:105px;border:none;outline:none;" })
                                                    <span>&nbsp;-&nbsp;&nbsp;</span>
                                                    @Html.TextBox("enddate", null, new { @class = "search", @placeholder = "dd-mm-yyyy", id = "edatepicker", name = "enddate", style = "width:105px;border:none;outline:none;" })
                                                </div>
                                                <button type="submit" class="btn btn-block btn-outline-dark">
                                                    Search
                                                </button>
                                            </div>

                                            <div class="col-6 col-md-6 col-lg-2 btnReadAll">
                                                <button id="btnReadAll" class=" btn btn-block btn-dark">Show All</button>
                                            </div>
                                        }
                                        @if (accessMatrixDetails.IsCreate == true)
                                        {
                                            <div class="col-6 col-md-6 col-lg-3 btnReadAll">

                                                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-dark btn-block" })

                                            </div>
                                        }
                                    </div>

                                    @if (accessMatrixDetails.IsExport == true)
                                    {
                                        <div class="row" style="margin-top:10px;">
                                            <div class="col-lg-10 col-6">
                                            </div>

                                            <div class="col-lg-2 col-6">
                                                @Html.ActionLink("Export", "Excel", "Payment", new
                                           {
                                               search = Request.QueryString["search"],
                                               startdate = Request.QueryString["startdate"],
                                               enddate = Request.QueryString["enddate"]
                                           }, new { @class = "btn btn-dark btn-block ", style = "margin-top:15px;margin-bottom:5px;" })

                                            </div>
                                        </div>

                                    }
                                    else
                                    {
                                        <div class="row">
                                            <div class="col-12">&nbsp;</div>
                                        </div>
                                    }

                                    <!-- table-striped -->
                                    <table class="table table-responsive-lg  w3-table w3-striped w3-border" id="paymentTable">
                                        <thead>
                                            <tr>
                                                <th class="d-none">
                                                    @Html.DisplayNameFor(model => model.First().Id)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().Expense)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().Frequency)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().Amount)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().DueDate)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().Narration)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().PaidDate)
                                                </th>


                                                <th>
                                                    Days Overdue
                                                </th>
                                                @if (accessMatrixDetails.IsEdit == true)
                                                {
                                                    <th></th>
                                                }
                                                @if (accessMatrixDetails.IsDetails == true)
                                                {
                                                    <th></th>
                                                }
                                                @if (accessMatrixDetails.Isdeleted == true)
                                                {
                                                    <th></th>
                                                }
                                            </tr>
                                        </thead>

                                        @if (Model.Count() == 0)
                                        {
                                            <tr>
                                                <td colspan="10">
                                                    No rows matching search criteria
                                                </td>
                                            </tr>
                                        }
                                        else
                                        {

                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td class="d-none">
                                                        @Html.DisplayFor(modelItem => item.Id)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Expense)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Frequency)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Amount)
                                                    </td>
                                                    <td>
                                                        <span hidden> @Html.ValueFor(modelItem => item.DueDate, "{0:MM-dd-yyyy}")</span>
                                                        @Html.ValueFor(modelItem => item.DueDate, "{0:dd-MM-yyyy}")
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Narration)
                                                    </td>
                                                    @if (item.PaidDate == DateTime.MinValue)
                                                    {
                                                        <td></td>
                                                        <td>
                                                            @Html.Label("", DateTime.Now.Subtract(item.DueDate).Days.ToString())
                                                        </td>
                                                    }
                                                    else
                                                    {
                                                        <td>
                                                            @Html.ValueFor(modelItem => item.PaidDate, "{0:dd-MM-yyyy}")
                                                        </td>
                                                        <td></td>

                                                    }


                                                    @if (accessMatrixDetails.IsEdit == true)
                                                    {
                                                        <td>

                                                            @Html.ActionLink("Edit", "Edit", "Payment", new { id = item.Id }, new { @class = "btn  btn-dark btn-block" })
                                                        </td>

                                                    }

                                                    @if (accessMatrixDetails.IsDetails == true)
                                                    {
                                                        <td>

                                                            @Html.ActionLink("Details", "Details", "Payment", new { id = item.Id }, new { @class = "btn btn-dark btn-block" })
                                                        </td>
                                                    }
                                                    @if (accessMatrixDetails.Isdeleted == true)
                                                    {
                                                        <td>



                                                            @Html.ActionLink("Delete", "Delete", "Payment", new { id = item.Id }, new { @class = "btn  btn-dark btn-block" })
                                                        </td>
                                                    }

                                                </tr>
                                            }
                                        }
                                    </table>


                                </div>
                                <div class="card-footer text-muted">
                                    @Html.PagedListPager(Model, pageIndex => Url.Action("Index", new
                               {
                                   pageIndex,
                                   search = Request.QueryString["search"],
                                   startdate = Request.QueryString["startdate"],
                                   enddate = Request.QueryString["enddate"]
                               }),
new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded })
                                    @*@Html.Partial("_PagingFooter")*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        }
    }
}
@section scripts{
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script>
        $('#paymentTable').dataTable({
            paging: false,
            "order": [[4, "desc"]]
        });

    </script>

