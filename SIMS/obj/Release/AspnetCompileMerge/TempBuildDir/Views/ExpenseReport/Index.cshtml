@using PagedList;
@using PagedList.Mvc
@model IPagedList<SIMS.ViewModels.ExpenseReportModel.ExpenseReportModel>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayoutpage.cshtml";
}

<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>
@using SIMS.BL
@using (@Html.BeginForm("Index", "ExpenseReport", FormMethod.Get))
{
    int userId = Users.RetrieveStaffIdByEmail(ViewContext.HttpContext.User.Identity.Name);
    Users user = Users.RetrieveById(userId);
    AccessMatrix accessMatrix = AccessMatrix.RetrieveByModuleName("ExpenseReport");
    if (accessMatrix != null)
    {
        AccessMatrixDetails accessMatrixDetails = AccessMatrixDetails.RetrieveAccess(accessMatrix.Id, user.Usertype);

        if (accessMatrixDetails != null)
        {

            <div class="card-body admin-outer-form">
                <div class="card-body admin-form">
                    <h3>Expense Report List</h3>
                    <hr />
                    <div class="row">
                        <div class="col-12">&nbsp;</div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="card">

                                <div class="card-body">
                                    <div class="row">
                                        @if (accessMatrixDetails.IsSearch == true)
                                        {
                                            <div class="col-12 col-md-5 col-lg-3" style="float: right">
                                                <div style="border:0.5px solid rgba(128, 128, 128, 0.59);border-radius:5px;padding:2px;">
                                                    <div class="row">
                                                        <div class="col-12">
                                                            @Html.TextBox("search", null, new { @class = "search", @placeholder = "Name", name = "search", style = "width:auto;border:none;outline:none;display:inline-flex" })
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-12 col-md-5 col-lg-4 d-flex btnReadAll">
                                                <div class="mr-2 text-center" style="border:0.5px solid rgba(128, 128, 128, 0.59);border-radius:5px;padding:2px;display:inline-flex">
                                                    @Html.TextBox("startdate", null, new { @class = "search", @placeholder = "dd-mm-yyyy", id = "sdatepicker", name = "startdate", style = "width:105px;border:none;outline:none;" })
                                                    <span>&nbsp;-&nbsp;&nbsp;</span>
                                                    @Html.TextBox("enddate", null, new { @class = "search", @placeholder = "dd-mm-yyyy", id = "edatepicker", name = "enddate", style = "width:105px;border:none;outline:none;" })
                                                </div>
                                                <button type="submit" class="btn btn-block btn-outline-dark">
                                                    Search
                                                </button>
                                            </div>

                                            <div class="col-6 col-md-6 col-lg-2 btnReadAll">
                                                <button id="btnReadAll" class=" btn btn-block btn-dark">Show All</button>
                                            </div>
                                        }
                                        @if (accessMatrixDetails.IsCreate == true)
                                        {
                                            <div class="col-6 col-md-6 col-lg-3 btnReadAll">

                                                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-dark btn-block" })

                                            </div>
                                        }
                                    </div>

                                    @if (accessMatrixDetails.IsExport == true)
                                    {
                                        <div class="row" style="margin-top:10px;">
                                            <div class="col-lg-10 col-6">
                                            </div>

                                            <div class="col-lg-2 col-6">
                                                @Html.ActionLink("Export", "Excel", "ExpenseReport", new
                                           {
                                               search = Request.QueryString["search"],
                                               startdate = Request.QueryString["startdate"],
                                               enddate = Request.QueryString["enddate"]
                                           }, new { @class = "btn btn-dark btn-block ", style = "margin-top:15px;margin-bottom:5px;" })

                                            </div>
                                        </div>

                                    }
                                    else
                                    {
                                        <div class="row">
                                            <div class="col-12">&nbsp;</div>
                                        </div>
                                    }

                                    <!-- table-striped -->
                                    <table class="table table-responsive  table-sm w3-table w3-striped w3-border" id="expenseReportTabletable" style="width:100%">
                                        <thead>
                                            <tr>
                                                <th class="d-none">
                                                    @Html.DisplayNameFor(model => model.First().Id)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().UserName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().TimeStamp)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().TransportVehicle)
                                                </th>

                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().StartingPoint)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().Destination)
                                                </th>

                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().Distance)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().Amount)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().FoodCharge)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().ParkingCharge)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().TollOrFineCharge)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().TollOrFineDetails)
                                                </th>

                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().Remarks)
                                                </th>

                                                @if (accessMatrixDetails.IsEdit == true)
                                                {
                                                    <th data-field="Edit" data-tableexport-display="none"></th>
                                                }
                                                @if (accessMatrixDetails.IsDetails == true)
                                                {
                                                    <th  data-field="Details" data-tableexport-display="none"></th>
                                                }
                                                @if (accessMatrixDetails.Isdeleted == true)
                                                {
                                                    <th data-field="DeActivate" data-tableexport-display="none"></th>
                                                }

                                            </tr>
                                        </thead>

                                        @if (Model.Count() == 0)
                                        {

                                            <tr>
                                                <td colspan="18">No rows matching search criteria </td>
                                            </tr>


                                        }
                                        else
                                        {

                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td class="d-none">
                                                        @Html.DisplayFor(modelItem => item.Id)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.UserName)
                                                    </td>
                                                    <td>
                                                        <span hidden> @Html.ValueFor(modelItem => item.TimeStamp, "{0:MM-dd-yyyy}")</span>
                                                        @Html.ValueFor(modelItem => item.TimeStamp, "{0:dd-MM-yyyy}")
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TransportVehicle)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.StartingPoint)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Destination)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Distance)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Amount)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.FoodCharge)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.ParkingCharge)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TollOrFineCharge)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TollOrFineDetails)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Remarks)
                                                    </td>
                                                    @if (accessMatrixDetails.IsIndex == false)
                                                    {

                                                        if (accessMatrixDetails.IsEdit == true)
                                                        {
                                                            <td data-field="Edit" data-tableexport-display="none">


                                                                @Html.ActionLink("Edit", "Edit", "ExpenseReport", new { id = item.Id }, new { @class = "btn btn-sm btn-dark btn-block" })

                                                            </td>
                                                        }
                                                        if (accessMatrixDetails.IsDetails == true)
                                                        {
                                                            <td data-field="Details" data-tableexport-display="none">


                                                                @Html.ActionLink("Details", "Details", "ExpenseReport", new { id = item.Id }, new { @class = "btn btn-sm btn-dark btn-block" })

                                                            </td>
                                                        }

                                                        if (accessMatrixDetails.Isdeleted == true)
                                                        {
                                                            <td data-field="Delete" data-tableexport-display="none">


                                                                @Html.ActionLink("Delete", "Delete", "ExpenseReport", new { id = item.Id }, new { @class = "btn btn-sm btn-dark btn-block" })

                                                            </td>
                                                        }
                                                    }
                                                    else
                                                    {

                                                        if (accessMatrixDetails.IsEdit == true)
                                                        {
                                                            if (userId != item.Staffid)
                                                            {
                                                                if (user.Usertype == "Admin" || user.Usertype == "Group Head")
                                                                {
                                                                    <td data-field="Edit" data-tableexport-display="none">

                                                                        @Html.ActionLink("Edit", "Edit", "ExpenseReport", new { id = item.Id }, new { @class = "btn btn-sm btn-dark btn-block" })
                                                                    </td>
                                                                }
                                                            }
                                                            else
                                                            {
                                                                <td data-field="Edit" data-tableexport-display="none">

                                                                    @Html.ActionLink("Edit", "Edit", "ExpenseReport", new { id = item.Id }, new { @class = "btn btn-sm btn-dark btn-block" })
                                                                </td>
                                                            }

                                                        }


                                                        if (accessMatrixDetails.IsDetails == true)
                                                        {
                                                            <td data-field="Details" data-tableexport-display="none">

                                                                @Html.ActionLink("Details", "Details", "ExpenseReport", new { id = item.Id }, new { @class = "btn btn-sm btn-dark btn-block" })
                                                            </td>
                                                        }
                                                        if (accessMatrixDetails.Isdeleted == true)
                                                        {

                                                            <td data-field="Delete" data-tableexport-display="none">

                                                                @Html.ActionLink("Delete", "Delete", "ExpenseReport", new { id = item.Id }, new { @class = "btn btn-sm btn-dark btn-block" })

                                                            </td>
                                                        }
                                                    }


                                                </tr>
                                            }
                                        }
                                    </table>

                                </div>
                                <div class="card-footer text-muted">
                                    @Html.PagedListPager(Model, pageIndex => Url.Action("Index", new
                               {
                                   pageIndex,
                                   search = Request.QueryString["search"],
                                   startdate = Request.QueryString["startdate"],
                                   enddate = Request.QueryString["enddate"]
                               }),
        new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded })
                                    @*@Html.Partial("_PagingFooter")*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}
