@model SIMS.ViewModels.ExpenseReportModel.ExpenseReportModel
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayoutpage.cshtml";
}
<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>
<div class="card-body admin-outer-form" >
    <div class="card-body admin-form">
        <h3>Delete Expense Report</h3>
        <hr />
        <div class="row">
            <div class="col-12">&nbsp;</div>
        </div>
    
        <div class="row">

            <div class="col-md-12">
                <div class="row">
                    <div class="col-4 col-lg-3">
                        @Html.DisplayNameFor(model => model.Id)
                    </div>
                    <div class="col-8 col-lg-9">
                        : @Html.DisplayFor(model => model.Id)
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 col-lg-3">
                        @Html.DisplayNameFor(model => model.UserName)
                    </div>
                    <div class="col-8 col-lg-9">
                        : @Html.DisplayFor(model => model.UserName)
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 col-lg-3">
                        @Html.DisplayNameFor(model => model.TimeStamp)
                    </div>
                    <div class="col-8 col-lg-9">
                        : @Html.ValueFor(model => model.TimeStamp, "{0:dd-MM-yyyy}")
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 col-lg-3">
                        @Html.DisplayNameFor(model => model.TransportVehicle)
                    </div>
                    <div class="col-8 col-lg-9">
                        : @Html.DisplayFor(model => model.TransportVehicle)
                    </div>
                </div>

                <div class="row">
                    <div class="col-4 col-lg-3">
                        @Html.DisplayNameFor(model => model.StartingPoint)
                    </div>
                    <div class="col-8 col-lg-9">
                        : @Html.DisplayFor(model => model.StartingPoint)
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 col-lg-3">
                        @Html.DisplayNameFor(model => model.Destination)
                    </div>
                    <div class="col-8 col-lg-9">
                        : @Html.DisplayFor(model => model.Destination)
                    </div>
                </div>

                <div class="row">
                    <div class="col-4 col-lg-3">
                        @Html.DisplayNameFor(model => model.Distance)
                    </div>
                    <div class="col-8 col-lg-9">
                        : @Html.DisplayFor(model => model.Distance)
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 col-lg-3">
                        @Html.DisplayNameFor(model => model.Amount)
                    </div>
                    <div class="col-8 col-lg-9">
                        : @Html.DisplayFor(model => model.Amount)
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 col-lg-3">
                        @Html.DisplayNameFor(model => model.FoodCharge)
                    </div>
                    <div class="col-8 col-lg-9">
                        : @Html.DisplayFor(model => model.FoodCharge)
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 col-lg-3">
                        @Html.DisplayNameFor(model => model.ParkingCharge)
                    </div>
                    <div class="col-8 col-lg-9">
                        : @Html.DisplayFor(model => model.ParkingCharge)
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 col-lg-3">
                        @Html.DisplayNameFor(model => model.TollOrFineCharge)
                    </div>
                    <div class="col-8 col-lg-9">
                        : @Html.DisplayFor(model => model.TollOrFineCharge)
                    </div>
                </div>

                <div class="row">
                    <div class="col-4 col-lg-3">
                        @Html.DisplayNameFor(model => model.TollOrFineDetails)
                    </div>
                    <div class="col-8 col-lg-9">
                        : @Html.DisplayFor(model => model.TollOrFineDetails)
                    </div>
                </div>
                <div class="row">
                    <div class="col-4 col-lg-3">
                        @Html.DisplayNameFor(model => model.Remarks)
                    </div>
                    <div class="col-8 col-lg-9">
                        : @Html.DisplayFor(model => model.Remarks)
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">&nbsp;</div>
                </div>
                @using (Html.BeginForm())
                {
                    <div class="row">
                        <div class="col-sm-3 col-6">
                            <input type="submit" value="Delete" class="btn btn-sm btn-dark btn-block" style="margin-bottom:10px;" />
                        </div>
                        <div class="col-sm-3 col-6">
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                        </div>
                        <div class="col-sm-2"></div>
                    </div>
                }

            </div>
        </div>
    </div>
</div>
