@model SIMS.ViewModels.SalesOrderModel.SalesOrderModel
@{
    ViewBag.Title = "Home";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<style>
    #main {
        background: white;
    }

    .SIMS-Card {
        background: url('/Photo/sims.jpg.jpeg') no-repeat;
        background-size: contain;
        background-position: center center;
        margin-top: 150px;
        height: 300px;
    }

    h1 {
        font-weight: 600;
    }
</style>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.6.0/Chart.min.js" type="text/javascript"></script>

<div class="text-center">
    <br /><h3>Sales Order</h3>
</div>
<hr style="background-color: #ffc107;height:2px;" />
<div class="row">
    <div class="col-sm-8">
        Tally entry Pending &nbsp;<label id="tallyCount" style="color:red;background-color:ghostwhite"></label>

    </div>
    <div class="col-sm-2">
        <label>Start Date:</label>
        <input type="date" id="startDate" class="form-control" value="@DateTime.Today.ToString("yyyy-MM-dd")" onchange="tallyChartUpdate()" />
    </div>
    <div class="col-sm-2">
        <label>End Date:</label>
        <input type="date" id="endDate" class="form-control" value="@DateTime.Today.AddMonths(1).ToString("yyyy-MM-dd")" onchange="tallyChartUpdate()" />
    </div>
</div>
<hr />

@*Tally Data chart of all users in salesorder...Start*@
<div class="row justify-content-center" id="tallyChartData">

</div>
@*End*@


