@model SIMS.ViewModels.CategoryModel.CategoryModel

@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";

    if (ViewBag.count == true)
    {
        Session["count"] = (bool)ViewBag.count;
        @section Scripts{
            <script>

                $(function () {
                    $('#myModal').modal();

                });

            </script>

        }
    }

}

<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>

<div class="modal fade" tabindex="-1" role="dialog" id="myModal">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h4 class="modal-title" style="color:white">
                    Delete Category
                </h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                This category is associated with sub categories in order to delete category, first you have to delete the categories.

            </div>
            <div class="text-right">
                <button type="button" class="btn btn-default" data-dismiss="modal">
                    Close
                </button>
            </div>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
<div class="card-body admin-outer-form">
    <div class="card-body admin-form">
        <h3>Delete Category</h3>
        <hr />
        <div class="row">
            <div class="col-12">&nbsp;</div>
        </div>

        <div class="row">

            <div class="col-md-1"></div>
            <div class="col-12 col-md-10">

                <div class="row">
                    <div class="col-4 d-md-none"></div>
                    <div class="col-4 col-md-3 text-center">
                        @if (Model.Thumbnail != null && Model.Thumbnail != "")
                        {
                            <img src="@Url.Content(Model.Thumbnail)" class="img-fluid" />

                        }
                        else
                        {
                            <img src="" alt="No image" class="img-fluid" />
                        }
                    </div>
                    <div class="col-4 d-md-none"></div>
                    <div class="col-12 col-md-9">

                        <div class="row d-none">
                            <div class="col-sm-1"></div>
                            <div class="col-sm-4">
                                @Html.DisplayNameFor(model => model.Id)
                            </div>
                            <div class="col-4 col-sm-6">
                                @Html.DisplayFor(model => model.Id)
                            </div>
                        </div>
                        <div class="row ">
                            <div class="col-12">&nbsp;</div>
                        </div>

                        <div class="row">
                            <div class="col-sm-1"></div>
                            <div class="col-4 col-sm-4">
                                @Html.DisplayNameFor(model => model.Name)
                            </div>
                            <div class="col-8 col-sm-6">
                                @Html.DisplayFor(model => model.Name)
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">&nbsp;</div>
                        </div>

                        <div class="row">
                            <div class="col-sm-1"></div>
                            <div class="col-4 col-sm-4">
                                @Html.DisplayNameFor(model => model.Discription)
                            </div>
                            <div class="col-8 col-sm-6">
                                @Html.DisplayFor(model => model.Discription)
                            </div>
                        </div>


                    </div>


                </div>
                <div class="row">
                    <div class="col-12">&nbsp;</div>
                </div>
                @using (Html.BeginForm())
                {
                    <div class="row">
                        <div class="col-sm-1"></div>
                        <div class="col-6 col-sm-4">
                            <input type="submit" value="Delete" class="btn btn-sm btn-dark btn-block" />
                        </div>
                        <div class="col-6 col-sm-4">
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                        </div>
                    </div>
                }
            </div>





        </div>
    </div>
</div>


