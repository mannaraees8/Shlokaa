@model SIMS.ViewModels.ChequeModel
@{
    ViewBag.Title = "Cheque";
    Layout = "~/Views/Shared/_AdminLayoutpage.cshtml";
}

<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>

<link href="~/Content/DropDown/select2.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <div class="card-body admin-outer-form">
        <div class="card-body admin-form">
            <h3>Create Customer Cheque List</h3>
            <hr />
            <div class="row">
                <div class="col-12">&nbsp;</div>
            </div>

            <div class="row">
                <div class="col-md-1"></div>
                <div class="col-12 col-md-10">
                    <div class="row">
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.ChequeNo)
                            @Html.EditorFor(model => model.ChequeNo, new { htmlAttributes = new { @class = "form-control"} })
                            @Html.ValidationMessageFor(model => model.ChequeNo, "", new { style = "color:#D8000C;background-color:#FFD2D2" })
                        </div>
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.ChequeDate)
                            @Html.EditorFor(model => model.ChequeDate, new { htmlAttributes = new { @class = "form-control"} })
                            @Html.ValidationMessageFor(model => model.ChequeDate, "", new { style = "color:#D8000C;background-color:#FFD2D2" })
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px">
                        <div class="col-sm-12">
                            @Html.LabelFor(model => model.PartyName)
                            @Html.DropDownListFor(model => model.PartyName, new SelectList(Model.CustomerList, "Name", "Name"), new { @class = "form-control col-12" })
                            @Html.ValidationMessageFor(model => model.PartyName, "", new { style = "color:#D8000C;background-color:#FFD2D2" })
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px">
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.Amount)
                            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control "} })
                            @Html.ValidationMessageFor(model => model.Amount, "", new { style= "color:#D8000C;background-color:#FFD2D2" })
                        </div>
                        <div class="col-sm-6">
                            @Html.LabelFor(model => model.BankName)
                            @Html.EditorFor(model => model.BankName, new { htmlAttributes = new { @class = "form-control "} })
                            @Html.ValidationMessageFor(model => model.BankName, "", new { style = "color:#D8000C;background-color:#FFD2D2" })
                        </div>
                    </div>
                    <div class="row" style="margin-top:10px">                     
                        <div class="col-sm-12">
                            @Html.LabelFor(model => model.Remark)
                            @Html.EditorFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control col-12 ", style = "height:80px" } })

                            @Html.ValidationMessageFor(model => model.Remark, "", new { style = "color:#D8000C;background-color:#FFD2D2" })
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12">&nbsp;</div>
                    </div>
                    <div class="row">
                        <div class="col-lg-3">
                        </div>
                        <div class="col-lg-3 col-sm-6">
                            <input type="submit" value="Create" class="btn btn-sm btn-dark btn-block" style="margin-bottom:10px" />
                        </div>
                        <div class="col-lg-3 col-sm-6">
                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">&nbsp;</div>
                </div>

                <div class="row">
                    <div class="col-12">&nbsp;</div>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    <script src="~/Scripts/DropDown/select2.js"></script>
    <script type="text/javascript">$(document).ready(function () { $("#PartyName").select2(); });</script>
}


