@using PagedList;
@using PagedList.Mvc
@model IPagedList<SIMS.ViewModels.CustomerModel.CustomerModel>
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_AdminLayoutpage.cshtml";
}


<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>
@using SIMS.BL

@using (@Html.BeginForm("Index", "Customer", FormMethod.Get))
{

    int userId = Users.RetrieveStaffIdByEmail(ViewContext.HttpContext.User.Identity.Name);
    Users user = Users.RetrieveById(userId);
    AccessMatrix accessMatrix = AccessMatrix.RetrieveByModuleName("Customer");
    if (accessMatrix != null)
    {
AccessMatrixDetails accessMatrixDetails = AccessMatrixDetails.RetrieveAccess(accessMatrix.Id, user.Usertype);

        if (accessMatrixDetails != null)
        {

            <div class="card-body admin-outer-form">
                <div class="card-body admin-form">
                    <h3>Customer List</h3>
                    <hr />

                    <div class="row">
                        <div class="col-12">&nbsp;</div>
                    </div>

                    <div class="row">
                        <div class="col-12">
                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        @if (accessMatrixDetails.IsSearch == true)
                                        {
                                            <div class="col-8 col-md-8 col-lg-4">
                                                @Html.TextBox("search", null, new { @class = "search form-control", @placeholder = "Search", name = "search" })
                                            </div>

                                            <div class="col-4 col-md-4 col-lg-2">
                                                <input type="submit" value="search" class="btn btn-block btn-outline-dark" />
                                            </div>

                                            <div class="col-6 col-md-5 col-lg-3 btnReadAll">
                                                <button id="btnReadAll" class=" btn btn-block btn-dark">Show All</button>
                                            </div>
                                        }
                                        <div class="col-6 col-md-7 col-lg-3 btnReadAll">
                                            @if (accessMatrixDetails.IsCreate == true)
                                            {
                                                @Html.ActionLink("Create New", "Create", null, new { @class = "btn btn-dark btn-block" })
                                            }
                                        </div>

                                    </div>

                                    @if (accessMatrixDetails.IsExport == true)
                                    {

                                        <div class="row">
                                            <div class="col-lg-10 col-6">
                                            </div>

                                            <div class="col-lg-2 col-6">
                                                @Html.ActionLink("Export", "Excel", "Customer", new
                                           {
                                               search = Request.QueryString["search"],
                                               startdate = Request.QueryString["startdate"],
                                               enddate = Request.QueryString["enddate"]
                                           }, new { @class = "btn btn-dark btn-block ", style = "margin-top:15px;margin-bottom:5px;" })
                                            </div>
                                        </div>

                                    }
                                    else
                                    {
                                        <div class="row">
                                            <div class="col-12">&nbsp;</div>
                                        </div>
                                    }


                                    <!-- table-striped -->
                                    <table class="table table-responsive-lg  table-sm w3-table w3-striped w3-border" id="dataTable">
                                        <thead>
                                            <tr>
                                                <th class="d-none">
                                                    @Html.DisplayNameFor(model => model.First().Id)
                                                </th>

                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().Vendercode)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().Name)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().ContactPerson)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().Mobile)
                                                </th>

                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().Location)
                                                </th>

                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().State)
                                                </th>

                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().MarketingExecutive)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().SalesOrderTarget)
                                                </th>
                                                @if (accessMatrixDetails.IsEdit)
                                                {
                                                    <th></th>
                                                }
                                                @if (accessMatrixDetails.IsDetails)
                                                {
                                                    <th></th>
                                                }
                                                @if (accessMatrixDetails.Isdeleted)
                                                {
                                                    <th></th>
                                                }



                                            </tr>
                                        </thead>

                                        @if (Model.Count() == 0)
                                        {
                                            <tr>
                                                <td colspan="11">No rows matching search criteria </td>
                                            </tr>
                                        }
                                        else
                                        {


                                            foreach (var item in Model)
                                            {
                                    <tr>
                                        <td class="d-none">
                                            @Html.DisplayFor(modelItem => item.Id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Vendercode)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Name)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.ContactPerson)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Mobile)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.Location)
                                        </td>

                                        <td>
                                            @Html.DisplayFor(modelItem => item.State)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MarketingExecutive)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SalesOrderTarget)
                                        </td>

                                        @if (accessMatrixDetails.IsEdit == true)
                                        {
                                            <td>

                                                @Html.ActionLink("Edit", "Edit", "Customer", new { id = item.Id }, new { @class = "btn btn-sm btn-dark btn-block" })
                                            </td>


                                        }

                                        @if (accessMatrixDetails.IsDetails == true)
                                        {
                                            <td>

                                                @Html.ActionLink("Details", "Details", "Customer", new { id = item.Id }, new { @class = "btn btn-sm btn-dark btn-block" })
                                            </td>

                                        }

                                        @if (accessMatrixDetails.Isdeleted == true)
                                        {
                                            <td>

                                                @Html.ActionLink("Delete", "Delete", "Customer", new { id = item.Id }, new { @class = "btn btn-sm btn-dark btn-block" })
                                            </td>

                                        }


                                    </tr>
                                            }
                                        }

                                    </table>


                                </div>
                                <div class="card-footer text-muted">
                                    @Html.PagedListPager(Model, pageIndex => Url.Action("Index", new
                               {
                                   pageIndex,
                                   search = Request.QueryString["search"],
                                   startdate = Request.QueryString["startdate"],
                                   enddate = Request.QueryString["enddate"]
                               }),
              new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded })
                                    @*@Html.Partial("_PagingFooter")*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    }
}
