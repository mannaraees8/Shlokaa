@model SIMS.ViewModels.CustomerModel.CustomerModel
@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_AdminLayoutpage.cshtml";
}
<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>
@using SIMS.BL
