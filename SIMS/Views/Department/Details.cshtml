@model SIMS.Models.DepartmentModel

@{
    ViewBag.Title = "Visit Log";
    Layout = "~/Views/Shared/_AdminLayoutpage.cshtml";
}

<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>
<div class="card-body admin-outer-form">
    <div class="card-body admin-form">
        <h3> Department Details</h3>
        <hr />
        <div class="row">
            <div class="col-12">&nbsp;</div>
        </div>



        <div class="row">
            <div class="col-12 col-md-10">
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-4 col-6">
                        <label>Id</label>
                    </div>
                    <div class="col-sm-6 col-6">
                        : @Html.DisplayFor(model => model.Id)
                    </div>
                </div>
                <div class="row d-none">
                    <div class="col-12">&nbsp;</div>
                </div>

                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-4 col-6">
                        @Html.DisplayNameFor(model => model.Department)
                    </div>
                    <div class="col-sm-6 col-6">
                        : @Html.DisplayFor(model => model.Department)
                    </div>
                </div>

                <div class="row">
                    <div class="col-12">&nbsp;</div>
                </div>
                <div class="row">
                    <div class="col-sm-1"></div>
                    <div class="col-sm-3 col-6">
                        @Html.ActionLink("Edit", "Edit", "Department", new { id = Model.Id }, new { @class = "btn btn-sm btn-dark btn-block" })
                    </div>
                    <div class="col-sm-3 col-6">
                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-12">&nbsp;</div>
            </div>
        </div>
    </div>
</div>

