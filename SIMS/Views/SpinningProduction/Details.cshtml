@model SIMS.ViewModels.SpinningProductionModel.SpinningProductionModel
@{
    ViewBag.Title = "Spinning Production";
    Layout = "~/Views/Shared/_AdminLayoutpage.cshtml";
}
<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>
@using SIMS.BL
@{
    int userId = Users.RetrieveStaffIdByEmail(ViewContext.HttpContext.User.Identity.Name);
    Users user = Users.RetrieveById(userId);
    AccessMatrix accessMatrix = AccessMatrix.RetrieveByModuleName("SpinningProduction");
    if (accessMatrix != null)
    {
        AccessMatrixDetails accessMatrixDetails = AccessMatrixDetails.RetrieveAccess(accessMatrix.Id, user.Usertype);

        if (accessMatrixDetails != null)
        {
            <div class="card-body admin-outer-form">
                <div class="card-body admin-form">
                    <h3>Spinning Production Details</h3>
                    <hr />

                    <div class="row">
                        <div class="col-12">&nbsp;</div>
                    </div>



                    <div class="row">
                        <div class="col-12 col-md-12 col-lg-12">

                            <div class="row">
                                <div class="col-lg-4 col-4">
                                    @Html.DisplayNameFor(model => model.Date)
                                </div>
                                <div class="col-lg-8 col-8">
                                    : @Html.ValueFor(model => model.Date, "{0:dd-MM-yyyy}")
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4 col-4">
                                    @Html.DisplayNameFor(model => model.EmployeeName)
                                </div>
                                <div class="col-lg-8 col-8">
                                    : @Html.DisplayFor(model => model.EmployeeName)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4 col-4">
                                    @Html.DisplayNameFor(model => model.ItemName)
                                </div>
                                <div class="col-lg-8 col-8">
                                    : @Html.DisplayFor(model => model.ItemName)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4 col-4">
                                    @Html.DisplayNameFor(model => model.CircleSize)
                                </div>
                                <div class="col-lg-8 col-8">
                                    : @Html.DisplayFor(model => model.CircleSize)
                                </div>
                            </div>



                            <div class="row">
                                <div class="col-lg-4 col-4">
                                    @Html.DisplayNameFor(model => model.CircleDate)
                                </div>
                                <div class="col-lg-8 col-8">
                                    : @Html.ValueFor(model => model.CircleDate, "{0:dd-MM-yyyy}")
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4 col-4">
                                    @Html.DisplayNameFor(model => model.CircleIssued)
                                </div>
                                <div class="col-lg-8 col-8">
                                    : @Html.DisplayFor(model => model.CircleIssued)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4 col-4">
                                    @Html.DisplayNameFor(model => model.FGWeight)
                                </div>
                                <div class="col-lg-8 col-8">
                                    : @Html.DisplayFor(model => model.FGWeight)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4 col-4">
                                    @Html.DisplayNameFor(model => model.Trimming)
                                </div>
                                <div class="col-lg-8 col-8">
                                    : @Html.DisplayFor(model => model.Trimming)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4 col-4">
                                    @Html.DisplayNameFor(model => model.Broken1)
                                </div>
                                <div class="col-lg-8 col-8">
                                    : @Html.DisplayFor(model => model.Broken1)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4 col-4">
                                    @Html.DisplayNameFor(model => model.BrokenPercentage)
                                </div>
                                <div class="col-lg-8 col-8">
                                    : @Html.DisplayFor(model => model.BrokenPercentage)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4 col-4">
                                    @Html.DisplayNameFor(model => model.ProductionFromBroken)
                                </div>
                                <div class="col-lg-8 col-8">
                                    : @Html.DisplayFor(model => model.ProductionFromBroken)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4 col-4">
                                    @Html.DisplayNameFor(model => model.ProductFromBroken)
                                </div>
                                <div class="col-lg-8 col-8">
                                    : @Html.DisplayFor(model => model.ProductFromBroken)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4 col-4">
                                    @Html.DisplayNameFor(model => model.NetBroken)
                                </div>
                                <div class="col-lg-8 col-8">
                                    : @Html.DisplayFor(model => model.NetBroken)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4 col-4">
                                    @Html.DisplayNameFor(model => model.NetBrokenPercentage)
                                </div>
                                <div class="col-lg-8 col-8">
                                    : @Html.DisplayFor(model => model.NetBrokenPercentage)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-lg-4 col-4">
                                    @Html.DisplayNameFor(model => model.Discrepancy)
                                </div>
                                <div class="col-lg-8 col-8">
                                    : @Html.DisplayFor(model => model.Discrepancy)
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-lg-4 col-4">
                                    @Html.DisplayNameFor(model => model.Remarks)
                                </div>
                                <div class="col-lg-8 col-8">
                                    : @Html.DisplayFor(model => model.Remarks)
                                </div>
                            </div>








                            <div class="row ">
                                <div class="col-12">&nbsp;</div>
                            </div>
                            @if (accessMatrixDetails.IsEdit == true)

                            {
                                if (userId != Model.StaffId)
                                {
                                    if (user.Usertype == "Admin" || user.Usertype == "Group Head")
                                    {
                                        <div class="row">
                                            <div class="col-sm-3 col-6">
                                                @Html.ActionLink("Edit", "Edit", "SpinningProduction", new { id = Model.Id }, new { @class = "btn btn-sm btn-dark btn-block", style = "margin-bottom:10px;" })
                                            </div>
                                            <div class="col-sm-3 col-6">
                                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                                            </div>
                                        </div>

                                    }
                                    else
                                    {
                                        <div class="row">
                                            <div class="col-sm-3 col-6">
                                                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                                            </div>
                                        </div>

                                    }
                                }
                                else
                                {
                                    <div class="row">
                                        <div class="col-sm-3 col-6">
                                            @Html.ActionLink("Edit", "Edit", "SpinningProduction", new { id = Model.Id }, new { @class = "btn btn-sm btn-dark btn-block", style = "margin-bottom:10px;" })
                                        </div>
                                        <div class="col-sm-3 col-6">
                                            @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                                        </div>
                                    </div>

                                }
                            }
                            else
                            {
                                <div class="row">
                                    <div class="col-sm-3 col-6">
                                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                                    </div>
                                </div>
                            }
                            <div class="row">
                                <div class="col-12">&nbsp;</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>



        }
    }
}