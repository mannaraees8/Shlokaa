@using PagedList;
@using PagedList.Mvc
@model IPagedList<SIMS.Models.LeaveApplyModel>

@{
    ViewBag.Title = "AdminIndex";
    Layout = "~/Views/Shared/_AdminLayoutpage.cshtml";
}
@section scripts{
    <script>
        $('#userTable').dataTable({
            paging: false,
            "aaSorting": [[2, "desc"]]
        });
    </script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
}

<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>
@using SIMS.BL

@using (@Html.BeginForm("AdminIndex", "LeaveApply", FormMethod.Get))
{
    int userId = Users.RetrieveStaffIdByEmail(ViewContext.HttpContext.User.Identity.Name);
    Users user = Users.RetrieveById(userId);

    <div class="card-body admin-outer-form">
        <div class="card-body admin-form">
            <h3>Leave Apply List</h3>
            <hr />
            <div class="row">
                <div class="col-12">&nbsp;</div>
            </div>

            <div class="row">
                <div class="col-12">
                    <div class="card">

                        <div class="card-body">
                            <div class="row">
                                <div class="col-12 col-md-5 col-lg-3" style="float: right">
                                    <div style="border:0.5px solid rgba(128, 128, 128, 0.59);border-radius:5px;padding:2px;">
                                        <div class="row">
                                            <div class="col-12">
                                                @Html.TextBox("search", null, new { @class = "search", @placeholder = "Name", name = "search", style = "width:auto;border:none;outline:none;display:inline-flex" })
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <div class="col-12 col-md-5 col-lg-4 btnReadAll d-flex">
                                    <div class="mr-2" style="border:0.5px solid rgba(128, 128, 128, 0.59);border-radius:5px;padding:2px;display:inline-flex">
                                        @Html.TextBox("startdate", null, new { @class = "search", @placeholder = "dd-mm-yyyy", id = "sdatepicker", name = "startdate", style = "width:105px;border:none;outline:none;" })
                                        <span>&nbsp;-&nbsp;&nbsp;</span>
                                        @Html.TextBox("enddate", null, new { @class = "search", @placeholder = "dd-mm-yyyy", id = "edatepicker", name = "enddate", style = "width:105px;border:none;outline:none;" })
                                    </div>
                                    <button type="submit" class="btn btn-block btn-outline-dark">
                                        Search
                                    </button>
                                </div>

                                <div class="col-6 col-md-6 col-lg-2 btnReadAll">
                                    <button id="btnReadAll" class=" btn btn-block btn-dark">Show All</button>
                                </div>
                            </div>
                            @if (user.Usertype == "Admin")
                            {
                                <div class="row mt-3">
                                    <div class="col-12 text-right btnReadAll">
                                        @Html.ActionLink("Leave Approve", "AdminApprovalPage", "LeaveApply", new { @class = "btn btn-dark", style = "width:200px" })
                                    </div>
                                </div>
                            }
                            <div class="row">
                                <div class="col-xs-12">&nbsp;</div>
                            </div>
                            <!-- table-striped -->
                            <table class="table table-responsive-lg  table-sm w3-table w3-striped w3-border" id="userTable" data-show-export="false" data-click-to-select="false" data-toolbar="#toolbar" data-show-toggle="false" data-show-columns="false">
                                <thead>
                                    <tr>
                                        <th class="d-none">
                                            @Html.DisplayNameFor(model => model.First().Id)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().UserName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().Date)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().LeaveCategory)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().Leavetype)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.First().ApprovedDate)
                                        </th>
                                        <th>
                                            <label></label>
                                        </th>
                                        @if (user.Usertype == "Executive Accounts")
                                        {
                                            <th></th>

                                        }
                                    </tr>
                                </thead>

                                @if (Model.Count() == 0)
                                {
                                    <tr>
                                        <td colspan="9">No rows matching search criteria </td>
                                    </tr>
                                }
                                else
                                {

                                    foreach (var item in Model)
                                    {
                                        <tr>
                                            <td class="d-none">
                                                @Html.DisplayFor(modelItem => item.Id)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UserName)
                                            </td>
                                            <td>
                                                <span hidden> @Html.ValueFor(modelItem => item.Date, "{0:MM-dd-yyyy}")</span>
                                                @Html.ValueFor(modelItem => item.Date, "{0:dd-MM-yyyy}")
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.LeaveCategory)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Leavetype)
                                            </td>

                                            @if (item.Ismanagerauthorised == true || item.Isadminauthorised == true)
                                            {
                                                <td>
                                                    @Html.ValueFor(modelItem => item.ApprovedDate, "{0:dd-MM-yyyy}")
                                                </td>
                                                <td>
                                                    <label>Approved</label>
                                                    @* @Html.DisplayFor(modelItem => item.Ismanagerauthorised)*@
                                                </td>
                                            }
                                            else
                                            {
                                                if (item.Isdeleted == true)
                                                {
                                                    <td>
                                                        <label></label>
                                                    </td>
                                                    <td>
                                                        <label>Rejected</label>
                                                        @* @Html.DisplayFor(modelItem => item.Ismanagerauthorised)*@
                                                    </td>
                                                }
                                                else
                                                {
                                                    <td>
                                                        <label></label>
                                                    </td>
                                                    <td>
                                                        <label>Pending</label>
                                                        @* @Html.DisplayFor(modelItem => item.Ismanagerauthorised)*@
                                                    </td>
                                                }

                                            }
                                            @if (user.Usertype == "Executive Accounts")
                                            {
                                                if (item.Ismanagerauthorised == false && item.Isdeleted == false && item.Isadminauthorised == false)
                                                {
                                                    <td>
                                                        @Html.ActionLink("Edit", "Edit", "LeaveApply", new { id = item.Id }, new { @class = "btn btn-sm btn-dark btn-block" })
                                                    </td>
                                                }
                                            }




                                        </tr>
                                    }
                                }

                            </table>

                        </div>
                        <div class="card-footer text-muted">
                            @Html.PagedListPager(Model, pageIndex => Url.Action("AdminIndex", new
                            {
                                pageIndex,
                           search = Request.QueryString["search"],
                           startdate = Request.QueryString["startdate"],
                           enddate = Request.QueryString["enddate"]
                       }),
                          new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded })
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
