@model SIMS.Models.LeaveApplyModel
@{
    ViewBag.Title = "Delete";
    Layout = "~/Views/Shared/_AdminLayoutpage.cshtml";
}
<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>
<div class="card-body admin-outer-form">
    <div class="card-body admin-form">
        <h3>Delete Leave Apply</h3>
        <hr />


        <div class="row">
            <div class="col-12 col-md-10">

                <div class="row">
                    <div class="col-12">&nbsp;</div>
                </div>
                <div class="row">
                    <div class="col-5">
                        @Html.DisplayNameFor(model => model.Staffid)
                    </div>
                    <div class="col-7">
                        : @Html.DisplayFor(model => model.Staffid)
                    </div>
                </div>
                <div class="row">
                    <div class="col-5">
                        @Html.DisplayNameFor(model => model.UserName)
                    </div>
                    <div class="col-7">
                        : @Html.DisplayFor(model => model.UserName)
                    </div>
                </div>
                <div class="row">
                    <div class="col-5">
                        @Html.DisplayNameFor(model => model.Date)
                    </div>
                    <div class="col-7">
                        : @Html.ValueFor(model => model.Date, "{0:dd-MM-yyyy}")
                    </div>
                </div>
                <div class="row">
                    <div class="col-5">
                        @Html.DisplayNameFor(model => model.Leavetype)
                    </div>
                    <div class="col-7">
                        : @Html.DisplayFor(model => model.Leavetype)
                    </div>
                </div>
                <div class="row">
                    <div class="col-5">
                        @Html.DisplayNameFor(model => model.LeaveCategory)
                    </div>
                    <div class="col-7">
                        : @Html.DisplayFor(model => model.LeaveCategory)
                    </div>
                </div>
                <div class="row">
                    <div class="col-5">
                        @Html.DisplayNameFor(model => model.Reason)
                    </div>
                    <div class="col-7">
                        : @Html.DisplayFor(model => model.Reason)
                    </div>
                </div>
                <div class="row">
                    <div class="col-12">&nbsp;</div>
                </div>
                @using (Html.BeginForm())
                {
                    if (ViewContext.HttpContext.User.IsInRole("Group Head"))
                    {

                        <div class="row">
                            <div class="col-sm-3 col-6">
                                <input type="submit" value="Delete" class="btn btn-sm btn-dark btn-block" style="margin-bottom:10px"/>
                            </div>
                            <div class="col-sm-3 col-6">
                                @Html.ActionLink("Back to List", "ManagerApprovalPage", null, new { @class = "btn btn-sm btn-dark btn-block" })
                            </div>
                        </div>
                    }
                    else if (ViewContext.HttpContext.User.IsInRole("Admin"))
                    {
                        <div class="row">
                            <div class="col-sm-3 col-6">
                                <input type="button" value="Delete" class="btn btn-sm btn-dark btn-block" style="margin-bottom:10px" />
                            </div>
                            <div class="col-sm-3 col-6">
                                @Html.ActionLink("Back to List", "AdminApprovalPage", null, new { @class = "btn btn-sm btn-dark btn-block" })
                            </div>
                        </div>
                    }
                }
                <div class="row">
                    <div class="col-12">&nbsp;</div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    function confirmDeletion() {
        var val = confirm("Are you sure you want to delete this record");
        if (val == true) {
            this.form.submit();

        } else {
            return false;
        }
    }
</script>