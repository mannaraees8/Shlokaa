<style>
    body {
        overflow-x: hidden;
    }

    * {
        box-sizing: border-box
    }

    body {
        font-family: "Lato", sans-serif;
    }

    /* Style the tab */
    .tab {
        float: left;
    }

        /* Style the buttons inside the tab */
        .tab button {
            display: block;
            background-color: inherit;
            color: orange;
            padding: 8px 14px;
            /* width: 380px;*/
            border: none;
            outline: none;
            text-align: left;
            cursor: pointer;
            transition: 0.3s;
            font-size: 14px;
            border-radius: 5px;
        }

            /* Change background color of buttons on hover */
            .tab button:hover {
                background-color: rgba(255, 106, 0, 0.49);
                color: white;
                /* width: 380px;*/
            }

            /* Create an active/current "tab button" class */
            .tab button.active {
                background-color: #ff6a00;
                color: white;
                display: block;
                /* width: 380px;*/
            }

    .btn.focus, .btn:focus {
        box-shadow: none;
    }
    /* Style the tab content */
    .tabcontent {
        padding-left: 25px;
        padding: 0px 12px;
        border-left: none;
    }

    .heading-Orange {
        color: orange;
    }

    @@media (max-width:992px) {
        img {
            max-height: 180px;
        }

        .specials {
            margin-top: -100px;
        }
    }

    .tab-pane {
        padding-left: 10px;
    }

    @@media (min-width:992px) {

        .img-fluid {
            margin-top: -60px;
        }
    }

    @@media (min-width:768px) and (max-width:991px) {
        .img-fluid {
            margin-top: -20px;
        }
    }
</style>
