@model SIMS.Models.UnitOfMeasurementModel

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}
<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>

@using SIMS.BL
@{
    int userId = Users.RetrieveStaffIdByEmail(ViewContext.HttpContext.User.Identity.Name);
    AccessMatrix accessMatrix = AccessMatrix.RetrieveByModuleName("UnitOfMeasurement");
    if (accessMatrix != null)
    {
        AccessMatrixDetails accessMatrixDetails = AccessMatrixDetails.RetrieveAccessByModuleId(userId, accessMatrix.Id);

        if (accessMatrixDetails != null)
        {

            <div class="card-body admin-outer-form">
                <div class="card-body admin-form">
                    <h3>  Unit Of Measurement Details</h3>
                    <hr />
                    <div class="row">
                        <div class="col-12">&nbsp;</div>
                    </div>

                    <div class="row">
                        <div class="col-md-1"></div>
                        <div class="col-12 col-md-10">


                            <div class="row d-none">
                                <div class="col-sm-1"></div>
                                <div class="col-6 col-sm-4">
                                    @Html.DisplayNameFor(model => model.Id)
                                </div>
                                <div class="col-6 col-sm-6">
                                    @Html.DisplayFor(model => model.Id)
                                </div>
                            </div>
                            <div class="row d-none">
                                <div class="col-12">&nbsp;</div>
                            </div>

                            <div class="row">
                                <div class="col-sm-1"></div>
                                <div class="col-6 col-sm-4">
                                    @Html.DisplayNameFor(model => model.UnitOfMeasurementName)
                                </div>
                                <div class="col-6 col-sm-6">
                                    @Html.DisplayFor(model => model.UnitOfMeasurementName)
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-12">&nbsp;</div>
                            </div>




                            @if (accessMatrixDetails.IsEdit == true)
                            {
                                <div class="row">
                                    <div class="col-sm-1"></div>
                                    <div class="col-6 col-sm-4">
                                        @Html.ActionLink("Edit", "Edit", "UnitOfMeasurement", new { id = Model.Id }, new { @class = "btn btn-sm btn-dark btn-block", style = "margin-bottom:10px" })
                                    </div>
                                    <div class=" col-6 col-sm-6">
                                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                                    </div>
                                </div>}
                            else
                            {
                                <div class="row">
                                    <div class="col-sm-1"></div>

                                    <div class=" col-6 col-sm-6">
                                        @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-sm btn-dark btn-block" })
                                    </div>
                                </div>
                            }
                            <div class="row">
                                <div class="col-12">&nbsp;</div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>

        }
    }
}