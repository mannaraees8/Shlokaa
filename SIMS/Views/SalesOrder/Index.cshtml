@using PagedList;
@using PagedList.Mvc
@using SIMS.BL
@model IPagedList<SIMS.ViewModels.SalesOrderModel.SalesOrderModel>

@{
    ViewBag.Title = "Sales Order";
    Layout = "~/Views/Shared/_AdminLayoutPage.cshtml";
}

<style>
    @@media (max-width:670px) {
        .admin-outer-form {
            padding: 0;
        }

        .admin-form {
            padding: 20px;
        }
    }
</style>

@using (@Html.BeginForm("Index", "SalesOrder", FormMethod.Get))
{

    int userId = Users.RetrieveStaffIdByEmail(ViewContext.HttpContext.User.Identity.Name);
    Users user = Users.RetrieveById(userId);
    AccessMatrix accessMatrix = AccessMatrix.RetrieveByModuleName("SalesOrder");
    if (accessMatrix != null)
    {
        AccessMatrixDetails accessMatrixDetails = AccessMatrixDetails.RetrieveAccess(accessMatrix.Id, user.Usertype);

        if (accessMatrixDetails != null)
        {
            <div class="card-body admin-outer-form">
                <div class="card-body admin-form">
                    <h3>Sales Order List</h3>
                    <hr />
                    <div class="row">
                        <div class="col-12">&nbsp;</div>
                    </div>


                    <div class="row">
                        <div class="col-12">

                            <div class="card">
                                <div class="card-body">
                                    <div class="row">
                                        @if (accessMatrixDetails.IsSearch == true)
                                        {
                                            <div class="col-12 col-md-5 col-lg-3" style="float: right">
                                                <div style="border:0.5px solid rgba(128, 128, 128, 0.59);border-radius:5px;padding:2px;">
                                                    <div class="row">
                                                        <div class="col-9">
                                                            @Html.TextBox("search", null, new { @class = "search", @placeholder = "Name", name = "search", style = "width:auto;border:none;outline:none;display:inline-flex" })
                                                        </div>

                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-12 col-md-5 col-lg-4 d-flex btnReadAll">
                                                <div class="mr-2" style="border:0.5px solid rgba(128, 128, 128, 0.59);border-radius:5px;padding:2px;display:inline-flex">
                                                    @Html.TextBox("startdate", null, new { @class = "search", @placeholder = "dd-mm-yyyy", id = "sdatepicker", name = "startdate", style = "width:105px;border:none;outline:none;" })
                                                    <span>&nbsp;-&nbsp;&nbsp;</span>
                                                    @Html.TextBox("enddate", null, new { @class = "search", @placeholder = "dd-mm-yyyy", id = "edatepicker", name = "enddate", style = "width:105px;border:none;outline:none;" })
                                                </div>
                                                <button type="submit" class="btn btn-block btn-outline-dark">
                                                    Search
                                                </button>
                                            </div>

                                            <div class="col-6 col-md-6 col-lg-2 btnReadAll">
                                                <button id="btnReadAll" class=" btn btn-block btn-dark">Show All</button>
                                            </div>
                                        }
                                        @if (accessMatrixDetails.IsCreate == true)
                                        {
                                            <div class="col-6 col-md-7 col-lg-3 btnReadAll">
                                                <a href="~/SalesOrder/Create" class="btn btn-block btn-dark">Create New</a>
                                            </div>
                                        }

                                    </div>


                                    @if (accessMatrixDetails.IsExport == true)
                                    {
                                        <div class="row" style="margin-top:10px;">
                                            <div class="col-lg-10 col-6">
                                            </div>

                                            <div class="col-lg-2 col-6">
                                                @*<button id="btnExportFull" type="button" class="btn btn-dark btn-block " onclick="location.href='@Url.Action("ExcelSalesOrder", "Staff")'" style="margin-top: 15px;margin-bottom: 5px;">Export</button>*@
                                                @*<a id="downloadLink" class="btnExport" onclick="exportToExcel(this)" style="cursor:pointer"> <i class="fa fa-file">&nbsp;Export</i></a>*@
                                                @*@Html.ActionLink("Export", "Excel", "Item", new {@class = "btn btn-dark btn-block ", style = "margin-top:15px;margin-bottom:5px;" })*@
                                                @Html.ActionLink("Export", "ExcelSalesOrder", "SalesOrder", new
                                           {
                                               search = Request.QueryString["search"],
                                               startdate = Request.QueryString["startdate"],
                                               enddate = Request.QueryString["enddate"]
                                           }, new { @class = "btn btn-dark btn-block ", style = "margin-top:15px;margin-bottom:5px;" })

                                            </div>
                                        </div>

                                    }
                                    else
                                    {
                                        <div class="row">
                                            <div class="col-12">&nbsp;</div>
                                        </div>
                                    }

                                    <!-- table-striped -->
                                    <table class="table table-responsive-lg  table-sm w3-table w3-striped w3-border" id="dataTable">

                                        <thead>
                                            <tr>
                                                <th data-field="Id">
                                                    Order No
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().Timestamp)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().CustomerName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().StaffName)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.First().TotalOrderValue)
                                                </th>
                                                <th class="text-center">
                                                    @Html.DisplayNameFor(model => model.First().Isaddedtotally)
                                                </th>
                                                @if (accessMatrixDetails.IsDetails == true)
                                                {

                                                    <th data-field="Details" data-tableexport-display="none"></th>
                                                }
                                                @if (accessMatrixDetails.Isdeleted == true)
                                                {

                                                    <th data-field="Delete" data-tableexport-display="none"></th>
                                                }
                                            </tr>
                                        </thead>
                                        @if (Model.Count() == 0)
                                        {
                                            <tr>
                                                <td colspan="6">No rows matching search criteria </td>
                                            </tr>
                                        }
                                        else
                                        {


                                            foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.Id)
                                                    </td>
                                                    <td>
                                                        <span hidden> @Html.ValueFor(modelItem => item.Timestamp, "{0:MM-dd-yyyy}")</span>
                                                        @Html.DisplayFor(modelItem => item.Timestamp)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.CustomerName)
                                                    </td>

                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.StaffName)
                                                    </td>
                                                    <td>
                                                        @Html.DisplayFor(modelItem => item.TotalOrderValue)
                                                    </td>

                                                    <td data-field="Tally" data-tableexport-display="none">
                                                        @if (accessMatrixDetails.IsTally == true)
                                                        {
                                                            if (item.Isaddedtotally)
                                                            {
                                                                <b>Added</b>
                                                            }
                                                            else
                                                            {
                                                                @Html.ActionLink("Add", "UpdateIsAddedToTally", "SalesOrder", new
                                                                {
                                                                    id = item.Id,
                                                               pageIndex = Request.QueryString["pageIndex"],
                                                               search = Request.QueryString["search"],
                                                               startdate = Request.QueryString["startdate"],
                                                               enddate = Request.QueryString["enddate"]
                                                           }, new { @class = "btn btn-sm btn-success btn-block" })

                                                            }
                                                        }
                                                        else
                                                        {
                                                            if (item.Isaddedtotally)
                                                            {
                                                                <b>Added</b>
                                                            }
                                                            else
                                                            {
                                                                <b>Not Added</b>
                                                            }
                                                        }

                                                    </td>
                                                    @if (accessMatrixDetails.IsDetails == true)
                                                    {
                                                        <td data-field="Details" data-tableexport-display="none">

                                                            @Html.ActionLink("Details", "OrderDetails", "SalesOrder", new { id = item.Id }, new { @class = "btn btn-sm btn-dark btn-block" })

                                                        </td>
                                                    }
                                                    @if (accessMatrixDetails.Isdeleted == true)
                                                    {

                                                        <td data-field="Delete" data-tableexport-display="none">

                                                            @Html.ActionLink("Delete", "Delete", "SalesOrder", new { id = item.Id }, new { @class = "btn btn-sm btn-dark btn-block" })

                                                        </td>
                                                    }
                                                </tr>
                                            }
                                        }

                                    </table>

                                </div>


                                <div class="card-footer text-muted">
                                    @Html.PagedListPager(Model, pageIndex => Url.Action("Index", new
                               {
                                   pageIndex,
                                   search = Request.QueryString["search"],
                                   startdate = Request.QueryString["startdate"],
                                   enddate = Request.QueryString["enddate"]
                               }),
        new PagedListRenderOptions() { Display = PagedListDisplayMode.IfNeeded })
                                    @*@Html.Partial("_PagingFooterStaffSalesOrder")*@
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-danger p-4 mt-5">Access permission not defined</div>
        }
    }
    else
    {
        <div class="alert alert-danger p-4 mt-5">Module not defined</div>
    }
}
@section scripts{
    <script>
        $(document).ready(function () {
            $('#dataTable').DataTable();

        });
    </script>

}